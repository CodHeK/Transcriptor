{{#if (and (not-eq router.currentRouteName 'register') (not-eq router.currentRouteName 'login'))}}
  <div class="ui secondary pointing menu">
    <div class="item"><div class="ui medium image"><img src="../assets/images/ntu-logo.svg"></div></div>
    {{#link-to 'index' class='item'}}Home{{/link-to}}
    {{#link-to  'my-transcriptions' class='item'}}My Transcriptions{{/link-to}}
    {{#link-to 'respeak' class='item'}}Re-speak{{/link-to}}
    {{#if authManager.currentUser.isAdmin}}
      {{#link-to 'jobs' class='item'}}Jobs{{/link-to}}
      {{#link-to 'users' class='item'}}Users{{/link-to}}
    {{/if}}
    {{#if session.isAuthenticated}}
      <div class="right menu">
        <a class="ui item" {{action 'logout'}}>
          Logout
        </a>
      </div>
    {{/if}}
  </div>
{{/if}}
{{outlet}}
{{ember-notify}}
