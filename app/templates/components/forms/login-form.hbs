
<div class="ui stackable three column doubling centered grid">
  <div class="column">
    <form class="ui large form" autocomplete="off" {{action 'submit' on='submit'}}>
      <div class="ui aligned segment basic less margin less padding">
        <h3 class="weight-400">Login</h3>
      </div>
      <div class="ui segments">
        <div class="ui segment {{if isLoading 'loading' ''}}">
          {{#if errorMessage}}
            <div class="ui negative message">
              <p>{{errorMessage}}</p>
            </div>
          {{/if}}
          {{#if newUser}}
            <div class="ui info message">
              <p>You have been registered successfully. Please login to continue.</p>
            </div>
          {{/if}}
          <div class="field">
            <div class="ui left icon input">
              <i class="mail icon"></i>
              {{input name='email' placeholder='Email ID' value=username}}
            </div>
          </div>
          <div class="field">
            <div class="ui left icon input">
              <i class="lock icon"></i>
              {{#if showPass}}
                {{input type="text" name='password' placeholder='Password' value=password}}
              {{else}}
                {{input type="password" name='password' placeholder='Password' value=password}}
              {{/if}}

            </div>
          </div>
          <div class="ui center aligned segment basic">
            <div class="ui vertical buttons">
              <button type="submit" class="ui fluid green submit button register">
               Login
              </button>
              <div class="ui center aligned segment basic">
                <a href="{{href-to 'editor'}}" class="text muted"> Forgot your password ?</a><br>
                <a href="{{href-to 'editor'}}" class="text muted"> Register</a>

              </div>
            </div>
          </div>
        </div>

      </div>
    </form>
  </div>
</div>
